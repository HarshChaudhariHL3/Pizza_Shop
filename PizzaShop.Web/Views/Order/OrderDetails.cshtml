
@model PizzaShop.Entity.ViewModel.OrderSummaryViewModel;
@{
    ViewData["Title"] = "Orders";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 col-12 offset-lg-2">
            <div class="row mb-3">
                <div class="col-12">
                    <div class="d-flex justify-content-between my-3">
                        <h2 class="text-primary">Order-Details</h2>
                        <a asp-action="Orders" asp-controller="Order">
                            <button type="button" class="btn btn-outline-primary">Back
                            </button></a>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-12">
                    <div class="p-3 rounded-3 shadow-lg bg-light d-sm-flex justify-content-between">
                        <div class="">
                            <div class="d-flex  align-items-center">
                                <h3 class="m-0">Order Summary</h3>
                                <span class="m-0 ms-1 mt-3 p-1 orderStatus">@Model.OrderStatus</span>
                            </div>
                            <div class="d-flex flex-column">
                                <span class="text-nowrap"><span class="fw-bold">Invoice No:</span>#DOM146569546565</span>
                                <div>
                                    <span class="text-nowrap"><span class="fw-bold">Paid on :</span> 20-08-2024</span>
                                    <span class="text-nowrap ms-2"><span class="fw-bold">Placed on :</span> @Model.CreatedAt</span>
                                    <span class="text-nowrap ms-2"><span class="fw-bold">Modified on :</span> @Model.ModifiedAt</span>
                                    <span class="text-nowrap ms-2"><span class="fw-bold">Order Duration: </span>00</span>
                                </div>
                            </div>
                        </div>
                        <div class="ExportBtn mt-2 m-sm-0">
                            <a asp-action="DownloadInvoice" asp-controller="Order" asp-route-id="@Model.OrderId" class="btn btn-primary d-flex p-2"><i class="fa-regular fa-file-pdf"><span class="ps-2">Export</span></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row g-3 mb-3 ">
                <div class="col-12 col-sm-6">
                    <div class="p-3 rounded-3 shadow-lg bg-light">
                        <div class="my-3">
                            <h3><i class="fa-solid fa-user fs-4"></i> Customer Details</h3>
                        </div>
                        <div class="d-flex flex-column ">
                            <span class="text-nowrap">Name : @Model.CustomerName</span>
                            <span class="text-nowrap">Phone : @Model.Phone</span>
                            <span class="text-nowrap">No of person : @Model.table.NoOfPerson</span>
                            <span class="text-nowrap">Email : @Model.Email</span>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-sm-6">
                    <div class="p-3 rounded-3 shadow-lg bg-light h-100">
                        <div class="my-3">
                            <h3><i class="fa-solid fa-table fs-4"></i> Table Details</h3>
                        </div>
                        <div class="d-flex flex-column">
                            <span class="text-nowrap">Table : @Model.table.TableName</span>
                            <span class="text-nowrap">Section : @Model.table.Name</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="p-3 rounded-3 shadow-lg bg-light">
                        <h3>Order Items</h3>
                        <div class="table-responsive">
                            <table class="table table-light">
                                <thead>
                                    <tr>
                                        <th class=" text-nowrap text-secondary">Sr.No</th>
                                        <th class="text-center text-nowrap text-secondary">Item</th>
                                        <th class="text-center text-nowrap text-secondary">Quality</th>
                                        <th class="text-center text-nowrap text-secondary">price</th>
                                        <th class="text-end text-nowrap text-secondary">Total Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @* @foreach(var items in Model.items)
                                    {
                                    <tr>
                                        <td class=" text-nowrap">1</td>
                                        <td class="text-center text-nowrap">
                                            <span>
                                                @items.ItemName
                                            </span>
                                            <ul class="list-unstyled ms-3">
                                                @foreach(var modifier in items.modifier)
                                                {
                                                    <li>@modifier.ModifierName</li>
                                                }
                                            </ul>
                                        </td>
                                        <td class="text-center text-nowrap">
                                            <div>@items.Quantity</div>
                                            <div>1</div>
                                        </td>
                                        <td class="text-center text-nowrap">
                                            <div>70.00</div>
                                            <div>10.00</div>
                                        </td>
                                        <td class="text-end text-nowrap">
                                            <div>70.00</div>
                                            <div>10.00</div>
                                        </td>
                                    </tr>
                                    } *@
                                </tbody>
                            </table>
                        </div>
                            <div class="d-flex flex-row align-items-center justify-content-end mt-3">
                                @* @foreach(var tax in Model.tax)
                                {
                                    <div class="">
                                        <h6>Sub Total:</h6>
                                        <h6>@tax.TaxName</h6>
                                        <h6>Total</h6>
                                    </div>
                                    <div class="ms-2 d-flex flex-column justify-content-end">
                                        <h6 class="d-flex justify-content-end text-secondary">₹900</h6>
                                        <h6 class="d-flex justify-content-end text-secondary">₹@tax.TaxValue</h6>
                                        <h6 class="d-flex justify-content-end text-secondary">₹600.00</h6>
                                    </div>
                                } *@
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
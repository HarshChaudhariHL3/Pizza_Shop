@{
    ViewData["Title"] = "Roles and Permissions";
}

<div >
    <div class="col-lg-12 d-flex justify-content-between mb-3">
        <div>
            <h1 class="text-primary">Roles</h1>
        </div>
    </div>
    <div class="row shadow bg-white pt-4 pb-4 pe-5 rounded  ">
        <div class="table-responsive mx-5">
            <table class="table">
                <thead>
                    <tr>
                        <th>Role</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in ViewBag.Roles)
                    {
                        <tr>
                            <td >@role.RoleName</td>
                            <td>
                                <a asp-action="Permission" id="EditBtnForRole" asp-controller="RoleAndPermission" asp-route-roleId="@role.RoleId" class="btn"><i class="bi bi-pen"></i></a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>

    <div>

    </div>
</div>


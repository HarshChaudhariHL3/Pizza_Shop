@model PizzaShop.Web.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">An Error Occurred</h1>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-danger">
        <strong>Error Message:</strong> @Model.Message
    </div>
}

@if (!string.IsNullOrEmpty(Model.StackTrace))
{
    <h3>Stack Trace</h3>
    <pre>@Model.StackTrace</pre>
}

@if (!string.IsNullOrEmpty(Model.RequestId))
{
    <p><strong>Request ID:</strong> @Model.RequestId</p>
}
    
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PizzaShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/PizzaShop.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
</head>
<body>
    <header>
    <div class="top-nav">
            <h2 class="logo">
                <a href="#" class="navbar-brand" id="sidebar-toggle">
                    <img src="~/images/logos/pizzashop_logo.png" height="50px" width="60px" alt=""></a>
                <span>Pizza Shop</span>
            </h2>
            <div class="info">
                <div class="info-txt">
                    <p class="name">
                        <img src="~/images/Default_pfp.svg.png" alt="" height="50px" width="50px">
                    </p>

                    <div class="menu">
                        <ul>
                            <li>
                                <a asp-controller="Profile" asp-action="Profile" >
                                    <span class="material-symbols-outlined"></span>My Profile
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Validation" asp-action="Logout" >
                                    <span class="material-symbols-outlined"><i class="bi bi-box-arrow-left"></i></span>Logout
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <span class="material-symbols-outlined info-icon"><i class="fa-solid fa-chevron-down"></i></span>
            </div>
        </div>

        <!-- sidebar open and close buttons -->

        <button class="menu-toggle" id="menu-toggle-open">
            <a href="#" class="navbar-brand" id="sidebar-toggle">
                <span class="material-symbols-outlined side-open-icon"><i class="bi bi-grip-horizontal"></i></span>
        </button>
        <button class="menu-toggle" id="menu-toggle-close">

            <span class="material-symbols-outlined side-close-icon"><i class="bi bi-x-lg"></i></span>
        </button>
        <!-- sidebar open and close buttons over -->
    </header>
    @* Sidebar *@

    <div class="side-nav" id="side-nav">
        <a asp-controller="Home" asp-action="Index" class="side-nav-row">
            <span class="material-symbols-outlined side-row-icon"><i class="bi bi-house"></i></span>
            <p>Dashboard</p>
        </a>
        <a asp-controller="User" asp-action="Index" class="side-nav-row">
            <span class="material-symbols-outlined side-row-icon"><i class="bi bi-people"></i></span>
            <p>Users</p>
        </a>
        <a asp-controller="Role" asp-action="Index" class="side-nav-row">
            <span class="material-symbols-outlined side-row-icon"><i class="fa-solid fa-user-gear"></i></span>
            <p>Roles and Permission</p>
        </a>
        <a asp-controller="" asp-action="Index" class="side-nav-row">
            <span class="material-symbols-outlined side-row-icon"><i class="fa-solid fa-utensils"></i></span>
            <p>Menu</p>
        </a>
        <a asp-controller="" asp-action="Index" class="side-nav-row">
            <span class="material-symbols-outlined side-row-icon"><i class="fa-solid fa-square"></i></span>
            <p>Table and Section</p>
        </a>
        <a asp-controller="" asp-action="Index" class="side-nav-row">
            <span class="material-symbols-outlined side-row-icon"><i class="fa-solid fa-money-bill"></i></span>
            <p>Taxes and Fees</p>
        </a>
        <a asp-controller="" asp-action="Index" class="side-nav-row">
            <span class="material-symbols-outlined side-row-icon"><i class="fa-solid fa-file"></i></span>
            <p>Orders</p>
        </a>
        <a asp-controller="" asp-action="Index" class="side-nav-row">
            <span class="material-symbols-outlined side-row-icon"><i class="fa-solid fa-user-large"></i></span>
            <p>Customers</p>
        </a>
    </div>
    <div class="side-nav" id="side-nav-mobile">
        <a asp-controller="Home" asp-action="Index" class="side-nav-row">
            <span class="material-symbols-outlined side-row-icon"><i class="bi bi-house"></i></span>
            <p>Dashboard</p>
        </a>
        <a asp-controller="User" asp-action="Index" class="side-nav-row">
            <span class="material-symbols-outlined side-row-icon"><i class="bi bi-people"></i></span>
            <p>Users</p>
        </a>
        <a asp-controller="Role" asp-action="Index" class="side-nav-row">
            <span class="material-symbols-outlined side-row-icon"><i class="fa-solid fa-user-gear"></i></span>
            <p>Roles and Permission</p>
        </a>
        <a asp-controller="" asp-action="Index" class="side-nav-row">
            <span class="material-symbols-outlined side-row-icon"><i class="fa-solid fa-utensils"></i></span>
            <p>Menu</p>
        </a>
        <a asp-controller="" asp-action="Index" class="side-nav-row">
            <span class="material-symbols-outlined side-row-icon"><i class="fa-solid fa-square"></i></i></span>
            <p>Table and Section</p>
        </a>
        <a asp-controller="" asp-action="Index" class="side-nav-row">
            <span class="material-symbols-outlined side-row-icon"><i class="fa-solid fa-money-bill"></i></span>
            <p>Taxes and Fees</p>
        </a>
        <a asp-controller="" asp-action="Index" class="side-nav-row">
            <span class="material-symbols-outlined side-row-icon"><i class="fa-solid fa-file"></i></span>
            <p>Orders</p>
        </a>
        <a asp-controller="" asp-action="Index" class="side-nav-row">
            <span class="material-symbols-outlined side-row-icon"><i class="fa-solid fa-user-large"></i></span>
            <p>Customers</p>
        </a>
    </div>
    <div class="container-fluid">
        <main id="maincontent" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - PizzaShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/062c911f56.js" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

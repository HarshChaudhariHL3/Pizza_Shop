<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PizzaShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @* <script src="https://unpkg.com/bootstrap-multiselect@0.9.13/dist/js/bootstrap-multiselect.js"></script> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/062c911f56.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"
        integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>

<body>
    <div class="container-fluid h-100">
        <div class="row vh-100">
            <aside class="col-lg-3 col-xxl-2 pt-4 m-0 p-0 " id="nav-bar">
                <div class="d-flex align-items-center justify-content-center gap-2 flex-wrap">
                    <img src="~/images/logos/pizzashop_logo.png" class="img-fluid rounded-5" width="55px" alt="image">
                    <span class="fs-3" style="color: #0F67B1; font-weight: 700;">PIZZASHOP</span>
                </div>
                <div class="mt-4">
                    <ul class="d-flex flex-column p-0 m-0 ">
                        <li class="">
                            <a asp-controller="Home" asp-action="Index" class="">
                                <div class="items d-flex align-items-center  gap-sm-0 gap-md-3  flex-wrap ps-3  @(@TempData["Active"] == "Dashboard" ? "Active" : "")">
                                    <span><i class="fa-solid fa-table-cells-large"></i></span>
                                    <span>Dashboard</span>
                                </div>
                            </a>
                        </li>
                        

                        <li class="">
                            <a asp-controller="Users" asp-action="Users">
                                <div
                                    class="items d-flex align-items-center gap-sm-0 gap-md-3 flex-wrap  ps-3 @(@TempData["Active"] == "User" ? "Active" : "")">
                                    <span><i class="fa-solid fa-users"></i></span>
                                    <span>User</span>
                                </div>
                            </a>
                        </li>
                        <li class="">
                            <a asp-controller="RoleAndPermission" asp-action="Roles">
                                <div
                                    class="items d-flex align-items-center gap-sm-0 gap-md-3 flex-wrap  ps-3 @(@TempData["Active"] == "RolesAndPermissions" ? "Active" : "")">
                                    <span><i class="fa-solid fa-user-gear"></i></span>
                                    <span>Roles And Permissions</span>
                                </div>
                            </a>
                        </li>

                        <li class="">
                            <a asp-controller="Menu" asp-action="Menu">
                                <div
                                    class="items d-flex align-items-center gap-sm-0 gap-md-3 flex-wrap  ps-3 @(@TempData["Active"] == "Menu" ? "Active" : "")">
                                    <span><i class="fa-solid fa-bell-concierge"></i></span>
                                    <span>Menu</span>
                                </div>
                            </a>
                        </li>

                        <li class="">
                            <a asp-controller="TableAndSection" asp-action="Sections">
                                <div
                                    class="items d-flex align-items-center gap-sm-0 gap-md-3 flex-wrap  ps-3 @(@TempData["Active"] == "TableAndSection" ? "Active" : "")">
                                    <span><i class="fa-solid fa-table"></i></span>
                                    <span>Table And Section</span>
                                </div>
                            </a>
                        </li>

                        <li class="">
                            <a asp-controller="TaxAndFee" asp-action="TaxesAndFees">
                                <div
                                    class="items d-flex align-items-center gap-sm-0 gap-md-3 flex-wrap  ps-3 @(@TempData["Active"] == "TaxesAndFees" ? "Active" : "")">
                                    <span><i class="fa-solid fa-money-check-dollar"></i></span>
                                    <span> Taxes And Fees</span>
                                </div>
                            </a>
                        </li>

                        <li class="">
                            <a asp-controller="Order" asp-action="Orders">

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PizzaShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/062c911f56.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"
        integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>

<body>
    
    <!-- Navbar -->
        <header>
        <div class="top-nav">
            <h2 class="logo d-flex align-items-center gap-2">
                <span>
                    <img src="~/images/logos/pizzashop_logo.png" height="50px" width="60px" alt="">
                </span>
                <span>Pizza Shop</span>
            </h2>
            <div>
                <a asp-controller="OrderApp" asp-action="Kot" class="h1 pe-3">Kot</i></a>
            </div>
            <div>
                <a asp-controller="OrderApp" asp-action="WaitingList" class="h1 pe-3">Waiting List</i></a>
            </div>
            <div>
                <a asp-controller="OrderApp" asp-action="Tables" class="h1 pe-3">Tables</i></a>
            </div>
            <div>
                <a asp-controller="OrderApp" asp-action="MenuOrderApp" class="h1 pe-3">Menu</i></a>
            </div>
            <div class="info">
                <div class="info-txt">
                    <p class="name">
                        <img src="~/images/Default_pfp.svg.png" alt="" height="50px" width="50px">
                    </p>

                    <div class="menu p-2">
                        <ul>
                            <li>
                                <a asp-controller="Users" asp-action="Profile">
                                    <span class="material-symbols-outlined"><i class="bi bi-person"></i></span>
                                    <span>My Profile</span>
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Validation" asp-action="Changepassword">
                                    <span class="material-symbols-outlined"><i class="bi bi-key"></i></span>
                                    <span>Change Password</span>
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Validation" asp-action="Logout">
                                    <span class="material-symbols-outlined"><i class="bi bi-box-arrow-left"></i></span>
                                    <span>Logout</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            
            </div>
        </div>

        <!-- sidebar open and close buttons -->

        <button class="menu-toggle" id="menu-toggle-open">
            <a class="navbar-brand ps-3" id="sidebar-toggle">
                <span class="material-symbols-outlined side-open-icon"><i class="bi bi-justify"></i></i></span>
        </button>
        <button class="menu-toggle" id="menu-toggle-close">

            <span class="material-symbols-outlined side-close-icon"><i class="bi bi-x-lg"></i></span>
        </button>
        <!-- sidebar open and close buttons over -->
    </header>

    <div class="container-fluid">
        <main  class="pb-3 p-5">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>


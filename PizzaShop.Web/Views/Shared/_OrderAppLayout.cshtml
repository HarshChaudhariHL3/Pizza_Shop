<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PizzaShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @* <script src="https://unpkg.com/bootstrap-multiselect@0.9.13/dist/js/bootstrap-multiselect.js"></script> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/062c911f56.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"
        integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>

<body>
    <div class="p-0 bg-light" id="main-part">
        <header class="header d-flex align-items-center justify-content-between px-sm-none p-2 bg-primary"
            style="height: 60px;">
            <div class="d-flex align-items-center gap-2">
                <div class="d-flex align-items-center gap-2" id="logo-section">
                    <a asp-action="Index" asp-controller="Home">
                    <img src="~/images/logos/pizzashop_logo.png" width="60px" class="bg-white">
                    </a>
                    <span class="text-white fs-4 fw-semibold">PIZZASHOP</span>
                </div>
            </div>
            <div class="dropdown d-flex align-items-center justify-content-center">
                <div class="d-flex align-items-center gap-2">
                    <div class="border border-1 rounded-pill border-white w-50  p-2 d-flex justify-content-center">
                        <a asp-controller="OrderApp" asp-action="Kot" class="text-decoration-none text-white">
                            <span><i class="fa-solid fa-mobile-button"></i></span>
                            <span>Kot</span>     
                            </a>
                    </div>
                    <div class="border border-1 rounded-pill border-white  p-2 d-flex justify-content-center" style="width: 280px;">
                        <a asp-controller="OrderApp" asp-action="WaitingList"
                            class="text-decoration-none text-white">
                            <span><i class="fa-solid fa-clock"></i></span>
                            <span>Waiting List</span>
                        </a>
                    </div>
                    <div class="border border-1 rounded-pill border-white w-50  p-2 d-flex justify-content-center">
                        <a asp-controller="OrderApp" asp-action="Tables"
                            class="text-decoration-none text-white">
                             <span><i class="fa-solid fa-table"></i></span>
                            <span>Tables</span>
                            </a>
                    </div>
                    <div class="border border-1 rounded-pill border-white w-50  p-2 d-flex justify-content-center">
                        <a asp-controller="OrderApp" asp-action="MenuOrderApp"
                            class="text-decoration-none text-white">
                            <span><i class="fa-solid fa-bell-concierge"></i></span>
                            <span>Menu</span>
                            </a>
                    </div>
                </div>
                <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown">
                    @* <img src="/@profile" width="40px" class="rounded-5"> *@
                    <img src="~/images/Default_pfp.svg.png" alt="" height="50px" width="50px">
                    <img src="" width="40px" class="rounded-5">
                </button>
                <ul class="dropdown-menu " aria-labelledby="dropdownMenuButton1">
                    <li></li>
                    <li class="d-flex align-items-center gap-3">
                        @* <img src="/@profile" width="30px" alt="image"> *@
                        <img src="" width="30px" alt="image">

                        <span>
                            @* @user *@
                            User
                        </span>
                    </li>
                    <hr>
                    <li>
                        <a asp-controller="Users" asp-action="Profile"
                            class="dropdown-item text-decoration-none text-dark ">
                            <span class="material-symbols-outlined"><i class="fa-solid fa-user"></i></span>
                            <span>My Profile</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Validation" asp-action="ChangePassword"
                            class="dropdown-item text-decoration-none text-dark">
                            <span class="material-symbols-outlined"><i class="fa-solid fa-key"></i></span>
                            <span>Change Password</span>
                        </a>
                    </li>
                    <li>
                        <button type="submit" class="dropdown-item" data-bs-toggle="modal"
                            data-bs-target="#LogoutModal"><i class="fa-solid fa-right-from-bracket"></i>
                            LogOut</button>
                    </li>
                </ul>
            </div>
        </header>
        <div class="container-fluid p-4">
            @RenderBody()
        </div>
    </div>
</body>

</html>
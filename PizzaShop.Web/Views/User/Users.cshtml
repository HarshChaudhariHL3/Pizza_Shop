@{
    ViewData["Title"] = "UserList Page";
}


@model PizzaShop.Entity.ViewModel.UserlistViewModel

<!-- user nav -->
<div class="d-flex container justify-content-between mt-4 mb-4">
    <h3> Users</h3>
    <div class="d-flex">
        <form method="post">
            <input class="btn btn-outline-secondary me-2 p-0" type="search" placeholder="Search" name="search"
                id="search" aria-label="Search">
        </form>
        <a class="btn btn-primary" asp-action="AddUser" asp-controller="User">+Add User</a>
    </div>
</div>

<!--user list-->
<div class="container">
    <div class="table-responsive p-4 tile ">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col d-flex">
                        Name
                        <!-- for small screen remove btn-->
                        <button class="btn p-0"><img src="images/down-arrow-svgrepo-com.svg" alt=""
                                width="20px"></button>
                        <button class="btn p-0"><img src="images/up-arrow-svgrepo-com.svg" alt="" width="20px"></button>
                    </th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone</th>
                    <th scope="col d-flex">
                        Role
                        <!-- for small screen remove btn-->
                        <button class="btn p-0"><img src="images/down-arrow-svgrepo-com.svg" alt=""
                                width="20px"></button>
                        <button class="btn p-0"><img src="images/up-arrow-svgrepo-com.svg" alt="" width="20px"></button>
                    </th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.users)
                {
                    <tr>
                        <td>
                            <div class="d-flex">
                                @* <img src="@item.ProfileImg" class="rounded-circle" alt="pic" width="40px"> *@
                                <p>@item.FirstName @item.LastName</p>
                            </div>

                        </td>
                        <td>@item.Email</td>

                        <td>@item.Phone</td>
                        <td>@item.RoleName</td>
                        <td>
                            @if (@item.Status)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }

                        </td>
                        <td class="d-flex">
                            <form asp-action="Edituser" asp-controller="User" method="get">
                                <input type="hidden" name="email" value="@item.Email">
                                <button type="submit" class="btn">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                        class="bi bi-pencil" viewBox="0 0 16 16">
                                        <path
                                            d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
                                    </svg>
                                </button>
                            </form>
                            <button type="button" class="btn openmodel" data-bs-toggle="modal"
                                data-bs-target="#exampleModal" data-id="@item.Email">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-trash" viewBox="0 0 16 16">
                                    <path
                                        d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                    <path
                                        d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                                </svg>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div aria-label="Page navigation example">
            <form asp-action="Users" asp-controller="User" method="get">
                <ul class="pagination justify-content-end ">
                    <li class="page-item m-2">
                        User per page
                        <select name="pagesize" id="pagesize">
                            <option asp-route-pagesize=3 id="opt3">3</option>
                            <option asp-route-pagesize=5 id="opt5">5</option>
                            <option asp-route-pagesize=10 id="opt10">10</option>
                            <option asp-route-pagesize=15 id=opt15>15</option>
                        </select>
                    </li>
                    <li class=" page-item m-2">
                        Showing @ViewBag.page of @ViewBag.totalpages
                    </li>

                    <!-- Previous Button -->
                    <li class="page-item m-1">

                        <p class="page-link" aria-label="Previous" id="previous_page">
                            <span aria-hidden="true">&laquo;</span>
                        </p>
                    </li>
                    <li class="page-item m-1">
                        <p class="page-link" aria-label="Next" id="next_page">
                            <span aria-hidden="true">&raquo;</span>
                        </p>
                    </li>

                    @*
                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link text-decoration-none @(currentPage == 1 ? "text-muted" : "text-body")"
                        href="@Url.Action("Index", new { page = currentPage - 1, pageSize })"><i
                            class="bi bi-caret-left-fill"></i></a>
                </li>*@
                </ul>
            </form>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="DeleteUser" asp-controller="User" method="post">
                <div class="modal-body text-center d-block">
                    <img src="images/warning-icon.svg" alt="warning" width="50px">
                    <p>Are you sure you want to delete this user ?</p>
                </div>
                <div class="modal-footer justify-content-center">
                    <input name="email" id="model-email">
                    <button type="submit" class="btn btn-primary">Yes</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{

    <script>
        $(document).ready(function () {

            // Set selected option from ViewBag.pageSize
            let opt_value = '@ViewBag.pagesize';
            if (opt_value == 3) {
                $('#opt3').attr('selected', 'selected');
            } else if (opt_value == 5) {
                $('#opt5').attr('selected', 'selected');
            } else if (opt_value == 10) {
                $('#opt10').attr('selected', 'selected');
            } else if (opt_value == 15) {
                $('#opt15').attr('selected', 'selected');
            }

            // Previous Page Click Handler
            let currentPage = @ViewBag.page;
            let totalPages = @ViewBag.totalpages;

            if (currentPage > 1) {
                $('#previous_page').on('click', function () {
                    currentPage--;
                    $(this).closest('form')
                        .append('<input type="hidden" name="page" value="' + currentPage + '">')
                        .submit();
                });
            }

            // Next Page Click Handler
            if (currentPage < totalPages) {
                $('#next_page').on('click', function () {
                    currentPage++;
                    $(this).closest('form')
                        .append('<input type="hidden" name="page" value="' + currentPage + '">')
                        .submit();
                });
            }

            // Pagesize Dropdown Change Event
            $('#pagesize').change(function () {
                $(this).closest('form').submit();
            });



            $('.openmodel').on("click", function () {
                var email = $(this).data('id');
                console.log(email)
                $("#model-email").val(email);
                // As pointed out in comments, 
                // it is unnecessary to have to manually call the modal.
                // $('#addBookDialog').modal('show');
            });


        });
    </script>
}
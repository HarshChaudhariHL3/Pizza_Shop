@{
    ViewData["Title"] = "Profile Page";
}
@model PizzaShop.Entity.ViewModel.ProfileViewModel

<div class="ms-5 mb-4" style="color: rgb(0, 102, 187);">
    <h1>My Profile</h1>
</div>

<div class="d-flex">
    <div class="w-100">
        <div class="bg-white border ms-5 me-5">
            <div class="row ">
                <img src="~/images/profile_div_bg.jpg" alt="bg-image" style="max-width: 100%; max-height: 10dvh;">
            </div>
            <div class="row px-3">
                <div class="UserDetails d-flex align-items-center justify-content-between">
                    <div class="images d-flex align-items-center flex-md-row flex-column">
                        <img src="~/images/Default_pfp.svg.png" alt=""
                            style="max-height: 100px; aspect-ratio: 1/1; margin-top: -30px;">
                        <div class=" ms-2">
                            <h2>@Model.FirstName @Model.LastName</h2>
                            <h4>@Model.Role</h4>
                        </div>
                    </div>
                    <div>
                        <p>@Model.Email</p>
                    </div>
                </div>
            </div>
            <form method="post" asp-controller="User" asp-action="Profile">
                <div class="row ps-3 pe-3 pt-3">
                    <div class="col-lg-6 pb-3">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="firstnameInput" placeholder="First Name"
                                asp-for="FirstName">
                            <label for="firstnameInput">First Name</label>
                        </div>
                    </div>
                    <div class="col-lg-6 pb-3">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="lastnameInput" placeholder="Last Name"
                                asp-for="LastName">
                            <label for="lastnameInput">Last Name</label>
                        </div>
                    </div>
                    <div class="col-lg-6 pb-1">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="usernameInput" placeholder="User Name"
                                asp-for="Email">
                            <label for="usernameInput">User Name</label>
                        </div>
                    </div>
                    <div class="col-lg-6 pb-1">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="phonenumberInput" asp-for="Phone" />
                            <label for="phonenumberInput">Phone number</label>
                        </div>
                    </div>
                </div>
                <div class="row ps-3 pe-3 pt-3">
                    <div class="col-lg-4 pb-3">
                        <div class="form-floating">
                            <select class="form-select" id="countrySelect" aria-label="Floating label select example"
                                asp-for="Country">

                            </select>
                            <label for="countrySelect">Country</label>
                        </div>
                    </div>
                    <div class="col-lg-4 pb-3">
                        <div class="form-floating">
                            <select class="form-select" id="stateSelect" aria-label="Floating label select example"
                                asp-for="State">

                            </select>
                            <label for="stateSelect">State</label>
                        </div>
                    </div>
                    <div class="col-lg-4 pb-3">
                        <div class="form-floating">
                            <select class="form-select" id="citySelect" aria-label="Floating label select example"
                                asp-for="City">
                            </select>
                            <label for="citySelect">City</label>
                        </div>
                    </div>
                </div>
                <div class="row ps-3 pe-3 pt-3">
                    <div class="col-lg-8 pb-3">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="addressInput" placeholder="Address"
                                asp-for="Address">
                            <label for="addressInput">Address</label>
                        </div>
                    </div>
                    <div class="col-lg-4 pb-3">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="zipcodeInput" placeholder="Zip Code"
                                asp-for="ZipCode">
                            <label for="zipcodeInput">Zip Code</label>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end gap-2 pe-3 pt-2 pb-3">
                    <button class="btn btn-primary" type="submit">Update</button>
                    @* <button class="btn btn-outline-primary" type="button">Cancel</button> *@
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajaxy/1.6.1/scripts/jquery.ajaxy.min.js"></script>


<script>
    $(document).ready(function () {
        $.ajax({
            type: 'GET',
            url: '/User/GetCountries',
            success: function (data) {
                console.log(data);
                var s = '<option value="-1">Please select a country</option>';
                for (var i = 0; i < data.length; i++) {
                    if (data[i].countryId == @Model.Country) {
                        s += '<option value="' + data[i].countryId + '" selected>' + data[i].countryName + '</option>';
                    }
                    else {
                        s += '<option value="' + data[i].countryId + '">' + data[i].countryName + '</option>';
                    }
                }
                $("#countrySelect").html(s);
            }
        });
        $.ajax({
            type: 'GET',
            url: '/User/GetStates',
            data: { CountryId: @Model.Country },
            success: function (data) {
                console.log(data);
                var s = '<option value="-1">Please select a state</option>';
                for (var i = 0; i < data.length; i++) {
                    if (data[i].stateId == @Model.State) {
                        s += '<option value="' + data[i].stateId + '" selected>' + data[i].stateName + '</option>';
                    }
                    else {
                        s += '<option value="' + data[i].stateId + '">' + data[i].stateName + '</option>';
                    }
                }
                $("#stateSelect").html(s);
            }
        });
        $.ajax({
            type: 'GET',
            url: '/User/GetCities',
            data: { stateId: @Model.State },
            success: function (data) {
                console.log(data);
                var s = '<option value="-1">Please select a city</option>';
                for (var i = 0; i < data.length; i++) {
                    if (data[i].cityId == @Model.City) {
                        s += '<option value="' + data[i].cityId + '" selected>' + data[i].cityName + '</option>';
                    }
                    else {
                        s += '<option value="' + data[i].cityId + '">' + data[i].cityName + '</option>';
                    }
                }
                $("#citySelect").html(s);
            }
        });
    });

    $('#countrySelect').change(function () {
        var countryId = $(this).val();
        $('#stateSelect').empty().append('<option selected>Select state</option>').prop('disabled', false);
            $.ajax({
                type: 'GET',
                url: '/User/GetStates',
                data: { CountryId: countryId },
                success: function (data) {
                    debugger;
                    console.log(data);
                    var s = '<option value="-1">Please select a state</option>';
                    for (var i = 0; i < data.length; i++) {
                        s += '<option value="' + data[i].stateId + '">' + data[i].stateName + '</option>';
                    }
                    $("#stateSelect").html(s);
                }
            });
    });

    $('#stateSelect').change(function () {
        var stateId = $(this).val();
        $('#citySelect').empty().append('<option selected>Select city</option>').prop('disabled', false);
            $.ajax({
                type: 'GET',
                url: '/User/GetCities',
                data: { stateId: stateId },
                success: function (data) {
                    var s = '<option value="-1">Please select a city</option>';
                    for (var i = 0; i < data.length; i++) {
                        s += '<option value="' + data[i].cityId + '">' + data[i].cityName + '</option>';
                    }
                    $("#citySelect").html(s);
                }
            });
    });
</script>
